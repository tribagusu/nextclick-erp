{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:debug",
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "outputCapture": "std"
        }
    ]
}